<h1>Sections</h1>


<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @sections.each do |section| %>
      <tr>
        <td><%= section.name %></td>
        <td><%= link_to 'Show details', section_path(section) %></td>
        <% if can? :update, @section %>
            <td>|<%= link_to 'Edit', edit_section_path(section) %></td>
        <% end %>
      </tr>
  <% end %>
</table>

<br />

<% if can? :update, @section %>
  <%= link_to 'New Section', new_section_path %>
<% end %>


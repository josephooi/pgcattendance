<p id="notice"><%= notice %></p>

<p>
  <b>Date:</b>
  <%= @event.date.strftime("%e %b %y") %>
</p>

<p>
  <b>Call time:</b>
  <%= @event.call.strftime("%l:%M %p") %>
</p>

<p>
  <b>End time:</b>
  <%= @event.end.strftime("%l:%M %p") %>
</p>

<p>
  <b>Title:</b>
  <%= @event.title %>
</p>

<p>
  <b>Category:</b>
  <%= @event.category %>
</p>

<p>
  <b>Description:</b>
  <%= @event.description %>
</p>

<p>
  <b>Dress:</b>
  <%= @event.dress %>
</p>

<p>
  <b>Call location:</b>
  <%= @event.calllocation %>
</p>

<% if can? :update, @event %>
    <%= link_to 'Edit', edit_event_path(@event) %> |
    <%= link_to 'Delete', @event, method: :delete, data: { confirm: 'Are you sure you want to delete this event?' } %> |
<% end %>
<%= link_to 'Back', events_path %>
